#!/bin/sh

delimiter=" | "

barstats() { \

    cat /tmp/recordingicon 2>/dev/null

    echo "$delimiter"

    echo " "
    df | grep /$ | awk '{print $5}'

    echo "$delimiter"

    bat=$(cat /sys/class/power_supply/BAT0/capacity)

    [ -f "/sys/class/power_supply/BAT0/capacity" ] && case "$(cat /sys/class/power_supply/BAT0/capacity)" in

	100|9[0-9]|8[0-9])    echo "  >80%" ;;
	7[0-9]|6[0-9]) echo "  60-70%" ;;
	6[0-9]|5[0-9]|4[0-9]) echo "  <60%" ;;
	*)             echo " LOW!! $bat% " ;;
    esac

    echo "$delimiter"

    if [ "$(cat /sys/class/net/w*/operstate)" = 'up' ]; then
	name="$(nmcli connection show | grep wlp | awk '{ print $1 }')"
	icon=" $name"
    elif [ "$(cat /sys/class/net/e*/operstate)" = 'up' ]; then
	icon=""
    else
	icon="No interwebz"
    fi

    echo "$icon"

    echo "$delimiter"

    pulsemixer --get-volume | awk '{print " " $1}'

    echo "$delimiter"

    #date '+%d %b, %H:%M'
}

barstats | tr -d '\n'
#while :; do
#    xsetroot -name "$(barstats | tr '\n' ' ')" &
#    sleep 30s
#done
