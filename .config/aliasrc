# vim:filetype=sh

alias mv="mv -v"\
    cp="cp -v"\
    mkc="make clean && rm -f config.h"\
    mks="make && sudo make clean install"\
    ls="exa --icons --git"\
    lsl="exa --icons --git -1"\
    fm="$FILES"\
    wup="ping -c 3 archlinux.org"\
    batt="cat /sys/class/power_supply/BAT0/capacity"\
    pro=". pro"\
    news="newsboat -u $HOME/Dropbox/dots/urls"

vf() { fzf | xargs -r -I % $EDITOR % ;}
